# Base Python image for Raspberry Pi
FROM python:3.9-slim

# Install system dependencies for GPIO (lightweight)
RUN apt-get update && apt-get install -y \
    python3-dev \
    libgpiod2 \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements and install Python dependencies
COPY requirements-sensor-api.txt .
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements-sensor-api.txt

# Copy the sensor API script
COPY sensor_in.py .

# Expose port 5000
EXPOSE 5000

# Run the Flask API
CMD ["python", "sensor_in.py"]
